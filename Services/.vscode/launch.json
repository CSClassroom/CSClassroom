{
    "version": "0.2.0",
    "configurations": [
        {
            "name":".NET Core Docker Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "composeForDebug",
            "cwd": "/app",
            "program": "/app/CSClassroom.WebApp.dll",
            "sourceFileMap": {
                "/app": "${workspaceRoot}/src/CSClassroom/CSClassroom.WebApp"
            },

            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                }
            },

            "pipeTransport": {
                "pipeProgram": "/bin/bash",
                "pipeCwd": "${workspaceRoot}/src/CSClassroom/CSClassroom.WebApp",
                "pipeArgs": [ "-c", "./dockerTask.sh startDebugging" ],
                "windows": {
                    "pipeProgram": "${env.windir}\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
                    "pipeCwd": "${workspaceRoot}/src/CSClassroom/CSClassroom.WebApp",
                    "pipeArgs": [ ".\\dockerTaskVSCode.ps1", "-StartDebugging" ]
                }
            }
        }
    ]
}