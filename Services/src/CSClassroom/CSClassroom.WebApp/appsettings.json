{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "ConnectionStrings": {
    "PostgresDefaultConnection": "User ID=postgres;Password=postgres;Host=postgres;Port=5432;Database=csclassroom;Pooling=true;",
    "LocalDBDefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=CSClassroom;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "DockerHost": {
    "DockerLibraryPath": "/usr/bin/docker",
    "HostTempFolderPath": "/tmp/CodeRunner",
    "ContainerTempFolderPath": "/tmp/CodeRunner"
  },

  "JavaRunnerContainer": {
    "ImageName": "csclassroom/coderunner-java",
    "RequestResponseMountPoint": "/tmp/CodeRunnerData",
    "RequestFileName": "request.json",
    "ResponseFileName": "response.json",
    "MaxLifetime": "00:00:20"
  }
}