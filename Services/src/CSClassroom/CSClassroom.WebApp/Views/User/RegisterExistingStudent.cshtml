@using CSC.CSClassroom.Model.Users
@model CSC.CSClassroom.Model.Users.StudentRegistration

@{
    ViewData["Title"] = "Add Class";
}

<h2>Add Class</h2>
<hr />
<span>You already have an account. If you would like to add the following class to your account, click the button below.</span>
<br />
<form asp-action="AddExistingStudent">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label class="col-md-2 control-label">Username</label>
            <div class="form-control-static col-md-10">
                <span>@ViewBag.UserName</span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Class</label>
            <div class="form-control-static col-md-10">
                <span>@ViewBag.ClassroomDisplayName</span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Section</label>
            <div class="form-control-static col-md-10">
                <span>@ViewBag.SectionDisplayName</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Class" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
