@using CSC.CSClassroom.Model.Users
@model CSC.CSClassroom.Model.Users.StudentRegistration

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>
<br />
<form asp-action="AddNewStudent">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label class="col-md-2 control-label">Username</label>
            <div class="form-control-static col-md-10">
                <span class="form-control-static">@ViewBag.UserName</span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Class</label>
            <div class="form-control-static col-md-10">
                <span>@ViewBag.ClassroomDisplayName</span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Section</label>
            <div class="form-control-static col-md-10">
                <span>@ViewBag.SectionDisplayName</span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Last Name</label>
            <div class="form-control-static col-md-10">
                <span>@ViewBag.LastName</span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p asp-description-for="FirstName" class="form-control-static"></p>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p asp-description-for="EmailAddress" class="form-control-static"></p>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GitHubLogin" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p asp-description-for="GitHubLogin" class="form-control-static"></p>
                <span class="form-control-static">If you have not already signed up for GitHub, click <a href="https://github.com/join">here</a> to do so before continuing this form.</span>
                <input asp-for="GitHubLogin" class="form-control" />
                <span asp-validation-for="GitHubLogin" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
