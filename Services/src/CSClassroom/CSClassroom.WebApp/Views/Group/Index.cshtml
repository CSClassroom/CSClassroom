@model IEnumerable<CSC.CSClassroom.Model.Classrooms.Group>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-groupName="@item.Name">Edit</a> |
                <a asp-action="Details" asp-route-groupName="@item.Name">Details</a> |
                <a asp-action="Delete" asp-route-groupName="@item.Name">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
