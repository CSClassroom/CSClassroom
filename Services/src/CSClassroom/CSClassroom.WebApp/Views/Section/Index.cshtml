@model IEnumerable<Section>

@{
    ViewData["Title"] = "Sections";
}

<h2>Class Sections</h2>

<p>
    <a asp-action="Create">Create Section</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllowNewRegistrations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllowStudentMessages)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy(s => s.Name)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllowNewRegistrations, "YesNo")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllowStudentMessages, "YesNo")
            </td>
            <td>
                <a asp-action="Students" asp-controller="Student" asp-route-sectionName="@item.Name">Students</a> |
                <a asp-action="SectionReport" asp-controller="Assignment" asp-route-sectionName="@item.Name">Assignments</a> |
                <a asp-action="SectionReport" asp-controller="Project" asp-route-sectionName="@item.Name">Projects</a> |
                <a asp-action="Edit" asp-route-sectionName="@item.Name">Edit</a> |
                <a asp-action="Delete" asp-route-sectionName="@item.Name">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
