@using CSC.CSClassroom.Model.Users
@model CSC.CSClassroom.Model.Users.SuperUserRegistration

@{
    ViewData["Title"] = "Activate Service";
}

<h2>Activate Service</h2>
<p>In order to activate the service, you will need to provide the activation token set during the initial deployment.
    In addition, you must set up a super-user account below.</p>

<form asp-action="ActivateService">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-2 control-label">Username</label>
            <div class="form-control-static col-md-10">
                <span>@ViewBag.UserName</span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ActivationToken" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p asp-description-for="ActivationToken" class="form-control-static"></p>
                <input asp-for="ActivationToken" class="form-control" />
                <span asp-validation-for="ActivationToken" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p asp-description-for="LastName" class="form-control-static"></p>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p asp-description-for="FirstName" class="form-control-static"></p>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p asp-description-for="EmailAddress" class="form-control-static"></p>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GitHubLogin" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p asp-description-for="GitHubLogin" class="form-control-static"></p>
                <input asp-for="GitHubLogin" class="form-control" />
                <span asp-validation-for="GitHubLogin" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Activate Service" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
