@{
    ViewData["Title"] = "Select Section";
}

<form asp-action="Index" method="post">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">Select Section</label>
            <div class="col-md-10">
                <select name="sectionName" class="form-control" asp-items="ViewBag.SectionNames"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Show Submissions" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
